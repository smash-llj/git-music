/* pages/home/home.wxss */


/* 轮播图区域 */

.banner {
    width: 100%;
    height: 300rpx;
}

.banner image {
    width: 100%;
    height: 100%;
}


/* 导航区域 */

.navcontainer {
    display: flex;
}

.navcontainer .navitem {
    display: flex;
    flex-direction: column;
    text-align: center;
    width: 20%;
    margin: 10px 0;
}

.navcontainer .navitem .iconfont {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    text-align: center;
    line-height: 50px;
    margin: 0 auto;
    background: rgb(240, 19, 19);
    color: #fbfbfb;
    font-size: 25px;
}

.navcontainer .navitem text {
    font-size: 15px;
    margin-top: 5px;
}


/* 导航推荐内容去 */

.tuijiancon {
    padding: 10px;
}

.ex {
    display: flex;
    height: 140px;
    /* 一定要设置高度 */
    margin: 5px 0;
}

.scrollitem {
    width: 100px;
    margin-right: 10px;
}

.scrollitem image {
    width: 100px;
    height: 100px;
    border-radius: 5px;
}

.scrollitem text {
    font-size: 26rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    /* 设置对齐模式 */
    -webkit-line-clamp: 2;
}


/* 排行榜区 */

.toplist {
    padding: 10px;
}

.topswiper {
    height: 210px;
}

.swiperitem {
    width: 94%;
    background-color: #fbfbfb;
}

.swiperitem .title {
    font-size: 15px;
    line-height: 40px;
    color: #777;
}

.musicitem {
    display: flex;
    margin: 5px 0;
}

.musicitem image {
    width: 50px;
    height: 50px;
    border-radius: 4px;
}

.musicitem .count {
    width: 50px;
    height: 50px;
    line-height: 50px;
    text-align: center;
}

.musicitem .musicname {
    height: 50px;
    line-height: 50px;
    max-width: 200px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}